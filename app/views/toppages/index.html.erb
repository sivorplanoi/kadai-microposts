<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <%= form_for(@micropost) do |f| %>
        <div class="form-group">
          <%= f.text_area :content, class: 'form-control', rows: 5 %>
        </div>
        <%= f.submit 'Post', class: 'btn btn-primary btn-block' %>
      <% end %>
      <%= link_to 'Users', users_path, class: 'container-fluid' %>
      <%= link_to 'My Microposts', user_path(current_user), class: 'container-fluid' %>
      <%= link_to 'My followings', followings_user_path(current_user), class: 'container-fluid' %>
      <%= link_to 'My followers', followers_user_path(current_user), class: 'container-fluid' %>
      <%= link_to 'My Favorites', favorites_user_path(current_user), class: 'container-fluid' %>
  </aside>
    <div class="col-xs-8">
      <%= render 'microposts/microposts', microposts: @microposts %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <div class="text-center">
      <h1>Welcome to the Microposts</h1>
      <%= link_to 'Sign up now!', signup_path, class: 'btn btn-lg btn-primary' %>
    </div>
  </div>
<% end %>